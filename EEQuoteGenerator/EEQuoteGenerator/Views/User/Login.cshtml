@model EEQuoteGenerator.Models.User

@{
    ViewData["Title"] = "Login";
}


<div class="container shadow rounded auth-div">
    <div class="row justify-content-center"> <h3 class="text-center">Login</h3></div>
    <div class="row">
        <div class="col-md-12 p-0">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserEmail" class="control-label">Email</label>
                    <input asp-for="UserEmail" class="form-control custom-input pl-0" type="email" placeholder="Type your email" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control custom-input pl-0" type="password" placeholder="Type your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row m-0 justify-content-center">
                    <input type="submit" value="Login" class="btn custom-button-classic" />
                </div>
            </form>
        </div>
    </div>
    <div class="row text-danger"><p>@ViewBag.ErrorMessage</p></div>
    <div class="row justify-content-center">
        Doesn't have an account?<a asp-action="Create" class="pl-1">Create One</a>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
