                        <label asp-for="InvestmentParam.AssumedAnnualElectricityConsumption" class="control-label"></label>
                        <input asp-for="InvestmentParam.AssumedAnnualElectricityConsumption" class="form-control custom-input pl-0" type="number" value="@((Model == null) ? "0" : Model.InvestmentParam.AssumedAnnualElectricityConsumption.ToString())" step="1" min="1" placeholder="Enter annual consumption" />
                        <span asp-validation-for="InvestmentParam.AssumedAnnualElectricityConsumption" class="text-danger"></span>
