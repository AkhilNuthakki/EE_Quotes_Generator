    ViewData["Title"] = "Quote Inputs";
}

<div class="container shadow rounded main-div">
    <div class="row justify-content-center pb-2"><h3>Solar Electricity Investment Appraisal</h3></div>
    <form id="inputParametersForm" asp-action="CalculateCostModel">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
